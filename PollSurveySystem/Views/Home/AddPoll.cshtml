@{
    ViewData["Title"] = "Add Poll";
}

@model PollSurveySystem.Models.ViewModels.AddPollViewModel

<div class="add-poll-flex-container">
    @if (ViewBag.message != null)
    {
        <div class="alert alert-primary" role="alert">
            @ViewBag.message
        </div>
    }
    <h1>Add Poll</h1>

    <form asp-controller="Home" asp-action="AddPoll" method="post">
        <div class="form-group">
            <label asp-for="Question">Question:</label>
            <input asp-for="Question" class="form-control" value="" required>
        </div>
        <div class="form-group">
            <label asp-for="Answer">Answers:</label>
            <textarea asp-for="Answer" class="form-control" placeholder="" required></textarea>
            <div class="alert alert-light d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" 
                     class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
                    Please write each answer on a new line.
                </div>
            </div>
        </div>
        <button asp-controller="Home" asp-action="AddPoll" class="btn btn-light btn-lg">Submit</button>
    </form>
</div>





